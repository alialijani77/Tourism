@model IEnumerable<DataLayer.Model.Pages>

    @{
        ViewData["Title"] = "Index";
    }



    <p>
        <a asp-action="Create" class="btn  btn-success">ساخت صفحه جدید</a>
    </p>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tags)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowSlider)
                </th>
                <th>
                    <a>استان</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tags)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Visit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowSlider)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
                    </td>
                    <td>
                        <img src="~/ImagesFolder/@item.ImageName" style="max-height:100px;max-width:100px" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PageID" class="btn btn-sm btn-warning">ویرایش</a>
                        <a asp-action="Details" asp-route-id="@item.PageID" class="btn btn-sm btn-info">جزئیات</a>
                        <a asp-action="Delete" asp-route-id="@item.PageID" class="btn btn-sm btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
