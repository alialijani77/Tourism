@model IEnumerable<DataLayer.Model.Pages>

<!-- most views news -->
<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/ImagesFolder/@item.ImageName">
                <h2> <a href="/Pages/@item.PageID">@item.Title</a></h2>
                <span>انتشار : @item.CreateTime.ToShamsi()</span>
            </li>
        }
    </ul>
</section>
<!-- end most views news -->
