@model IEnumerable<DataLayer.Model.Pages>

<!-- last news -->
<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>آخرین صفحات ارسالی</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/ImagesFolder/@item.ImageName">
                <h2> <a href="/Pages/@item.PageID"> @item.Title </a></h2>
                <p>
                    @item.PageDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateTime.ToShamsi() </span>
                <a href="/Pages/@item.PageID" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>
<!-- End last news -->
